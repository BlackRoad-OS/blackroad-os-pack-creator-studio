{
  "name": "blackroad-os-pack-creator-studio",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "BlackRoad OS Pack Creator Studio - A service for creating and managing OS packs",
  "main": "src/index.js",
  "scripts": {
    "br-create": "ts-node src/cli.ts",
    "lint": "eslint ./src ./agents ./lib ./scripts --ext .ts && prettier -c .",
    "format": "prettier -w .",
    "postbuild": "ts-node scripts/postbuild.ts",
    "test": "pnpm lint",
    "test:ts": "mocha -r ts-node/register tests/**/*.test.ts",
